.swiper-tab {
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  box-shadow: 1rpx 5rpx 5rpx #E6E6E6;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
  flex-direction: row;
}

.swiper-tab .swiper-select-tab-list {
  font-size: 30rpx;
  display: inline-block;
  /* width: 20%; */
  position: relative;
  color: #2c2c2c;
}

.swiper-tab .swiper-unselect-tab-list {
  font-size: 30rpx;
  display: inline-block;
  /* width: 20%; */
  position: relative;
  color: #8a8a8a;
}

.swiper-tab .select::before {
  content: "";
  position: absolute;
  height: 6rpx;
  background: #1296db;
  bottom: 10rpx;
  width: 60rpx;
  left: 50%;
  /* color: #2c2c2c; */
  transform: translateX(-50%);
}

.swiper-tab .un-select::before {
  content: "";
  position: absolute;
  height: 6rpx;
  background: #dbdbdb;
  bottom: 10rpx;
  width: 60rpx;
  left: 50%;
  /* color: #ff0000; */
  transform: translateX(-50%);
}



