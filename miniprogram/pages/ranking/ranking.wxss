.swiper-box .org-list .org-list-item .org-show-detailt::after {
  content: "";
  position: absolute;
  left: 40%;
  bottom: 10rpx;
  width: 18rpx;
  height: 18rpx;
  border-left: 1rpx solid #999;
  border-bottom: 1rpx solid #999;
  transform: translate(-50%, -50%) rotate(135deg);
}

.swiper-box .org-list .org-list-item .org-hide-detail::after {
  content: "";
  position: absolute;
  left: 40%;
  bottom: 25rpx;
  width: 18rpx;
  height: 18rpx;
  border-left: 1rpx solid #999;
  border-bottom: 1rpx solid #999;
  transform: translate(-50%, -50%) rotate(-45deg);
}

